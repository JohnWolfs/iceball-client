{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch localhost with sourcemaps",
            "type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000/",
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}",
			"diagnosticLogging": true
        },
		{
			"name": "Attach with sourcemaps",
			"type": "chrome",
			"request": "attach",
			"port": 9222,
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}"
		}
    ]
}